{
    "name": "kartenmacherei/api-qa-challenge",
    "description": "A simple API for the QA challenge",
    "license": "proprietary",
    "require": {
        "php": "8.0",
        "ext-json": "*",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.3",
        "phpspec/prophecy-phpunit": "^2.0",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Kartenmacherei\\ApiQaChallenge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kartenmacherei\\ApiQaChallenge\\UnitTest\\": "tests/unit",
            "Kartenmacherei\\ApiQaChallenge\\AcceptanceTest\\": "tests/acceptance"
        }
    }
}
